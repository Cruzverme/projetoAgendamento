= form_for @pessoa_juridica do |f|
  - if @pessoa_juridica.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pessoa_juridica.errors.count, "error")} prohibited this pessoa_juridica from being saved:"
      %ul
        - @pessoa_juridica.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :endereco
    = f.text_field :endereco
  .field
    = f.label :bairro
    = f.text_field :bairro
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :telefone
    = f.text_field :telefone
  .field
    = f.label :porte
    = f.text_field :porte
  .field
    = f.label :cnpj
    = f.number_field :cnpj
  .field
    = f.label :cidade
    = f.text_field :cidade
  .actions
    = f.submit 'Save'
